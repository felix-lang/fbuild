#!/usr/bin/env python3
import sys, os

fbuild_dirname = os.path.dirname(sys.argv[0])

os.environ['PYTHONPATH'] = os.pathsep.join(sys.path)+os.pathsep+\
                           os.path.join(fbuild_dirname, 'lib')

os.execl(sys.executable, sys.executable,
         os.path.join(fbuild_dirname, 'bin', 'fbuild'), *sys.argv[1:])
